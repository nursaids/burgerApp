<div class="row">
    <div class="col-md-6">
        <h2>Ready to eat</h2>
    </div>

    <div class="col-md-6">
        <h2>Devoured</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        {{!-- <h2>Ready to eat</h2> --}}

        {{#each burgers}}
        {{#unless devoured}}
        <div class="row burger-row">
            <div class="col-md-9">
                <p class="burger-name">{{id}}. {{burger_name}}</p>
            </div>

            <div class="col-md-3">
                <button id="burger-{{id}}" burger="{{id}}" class="btn btn-light burger-button">Devour</button>
            </div>
        </div>
        {{/unless}}
        {{/each}}
    </div>

    <div class="col-md-6">
        {{!-- <h2>Devoured</h2> --}}

        {{#each burgers}}
        {{#if devoured}}
        <p class="burger-name">{{id}}. {{burger_name}}</p>
        {{/if}}
        {{/each}}
    </div>
</div>